<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

  <mapper namespace="com.woods.example.dao.IUserDao" >

  <resultMap id="BaseResultMap" type="User" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="age" property="age" jdbcType="INTEGER" />
  </resultMap>

  <!-- 字段列表 -->
  <sql id="Base_Column_List" >
    id, name, age
  </sql>

  <!-- 表名 -->
  <sql id="TB_USER">tb_user</sql>

  <!-- 根据主键查询 -->
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select
    <include refid="Base_Column_List" />
    FROM <include refid="TB_USER" />
    where id = #{id,jdbcType=INTEGER}
  </select>

  <select id="selectByUser" resultMap="BaseResultMap" parameterType="User">
    SELECT <include refid="Base_Column_List" />
    FROM <include refid="TB_USER" />
    <where>
      <if test="name != null">
        NAME LIKE '%${name}%'
      </if>
    </where>
  </select>

  <select id="selectByPage" resultMap="BaseResultMap" parameterType="User">
    select
    <include refid="Base_Column_List" />
    FROM <include refid="TB_USER" />
    WHERE 1=1
    <if test="id != null">
      AND id=#{id}
    </if>
    <!--<if test="name != null">-->
      <!--AND NAME LIKE '%#{name}%'-->
    <!--</if>-->
    <if test="name != null">
      AND NAME LIKE '%${name}%'
    </if>
    </select>

    <select id="selectAll" resultMap="BaseResultMap" >
      SELECT <include refid="Base_Column_List" />
      FROM <include refid="TB_USER" />
    </select>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
      delete from <include refid="TB_USER" />
      where id = #{id,jdbcType=INTEGER}
    </delete>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="User" >
      insert into <include refid="TB_USER" /> (id, name, age )
      values ( , #{name}, #{age}
        )
    </insert>

    <insert id="insertSelective" parameterType="User" >
      insert into <include refid="TB_USER" />
      <trim prefix="(" suffix=")" suffixOverrides="," >
        <if test="id != null" >
          id,
        </if>
        <if test="name != null" >
          name,
        </if>
        <if test="age != null" >
          age,
        </if>
      </trim>
      <trim prefix="values (" suffix=")" suffixOverrides="," >
        <if test="id != null" >
          #{id,jdbcType=INTEGER},
        </if>
        <if test="name != null" >
          #{name,jdbcType=VARCHAR},
        </if>
        <if test="age != null" >
          #{age,jdbcType=INTEGER},
        </if>
      </trim>
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="user" >
      update <include refid="TB_USER" />
      <set >
        <if test="name != null" >
          name = #{name,jdbcType=VARCHAR},
        </if>
        <if test="age != null" >
          age = #{age,jdbcType=INTEGER},
        </if>
      </set>
      where id = #{id,jdbcType=INTEGER}
    </update>

    <update id="updateByPrimaryKey" parameterType="User" >
      update <include refid="TB_USER" />
      set name = #{name,jdbcType=VARCHAR},
        age = #{age,jdbcType=INTEGER}
      where id = #{id,jdbcType=INTEGER}
    </update>

  </mapper>